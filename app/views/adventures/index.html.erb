<div class="row-fluid navbar navbar-fixed-top" id="meta-bar">
  <div class="span3" id="title">
    <h1>Find your Adventure!</h1>
    <h3>via <a href="http://livingsocial.com/adventures">LivingSocial</a></h3>
  </div>

  <div class="span3">
    <h2>City?</h2>
    <%= select("market", "market_id", 
      Market.all.collect {|p| [ p.city, p.city, 
        {:'data-lat' => p.latitude, :'data-lng' => p.longitude}] }, 
        {},{:class=>'chzn-select', :'data-placeholder' => "Find cities!", :multiple => true }) %>
      </div>

      <div class="span2">
        <div id="datepicker-box"><h2>Date?</h2>

          <div class="input-prepend">
            <span class="add-on">From:</span>
            <input type="text" class="input-mini" id="from" name="from"/>
          </div>

          <div class="input-prepend">
            <span class="add-on">To:</span>
            <input type="text" id="to" name="to"/>
          </div>
        </div>
      </div>

      <div class="span3" id="slider-box">
        <h2>Price:  </h2><div id="filtered-price" class='slider-value'></div>

        <div id='price-range'>
        </div>
        <p>
          <input type="hidden" id="hidden-price" />
        </p>


        <h2>Length: </h2><div id="filtered-duration" class='slider-value'></div>
        <br>
        <div id='duration-range'>
        </div>
        <p>
          <input type="hidden" id="hidden-price" />
        </p>
      </div>
    </div>

    <div class="span1">
      <p>hello</p>
    </div>

    <div class="row-fluid" id="map_area">
      <div class="span4" id="left_list_area" >
        <div class="btn-group" id="status-toggle" data-toggle="buttons-radio">
          <button class="btn active btn-small btn-info" value="all">All Deals</button>
          <button class="btn btn-small btn-info" value="active">Active</button>
          <button class="btn btn-small btn-info" value="sold_out">Sold out</button>
        </div>

        <div class="btn-group" id="sort-toggle" data-toggle="buttons-radio">
          <a id="sort_price" class="btn btn-small btn-info">Price <span class="caret"></span></a>
          <a id="sort_duration" class="btn btn-small btn-info">Duration <span class="caret"></span></a>
        </div>
        <ul id="sidebar_adventure_list">
        </ul>
      </div>

      <div class="span8">
        <%= gmaps(@gmap_options) %>
      </div>
    </div>

    <script type="text/javascript">
    var Adventure = {
      min_price: <%= Adventure.min_price %>,
      max_price: <%= Adventure.max_price %>
    }
    </script>