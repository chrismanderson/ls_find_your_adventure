<div class="row-fluid navbar navbar-fixed-top" id="meta-bar">
  <div class="span3">
    <div class="btn-group" id="status-toggle" data-toggle="buttons-radio">
      <button class="btn active" value="all">All Deals</button>
      <button class="btn" value="active">Active</button>
      <button class="btn" value="sold_out">Sold out</button>
    </div>
  </div>

  <div class="span3">
    <label for="from">From</label>
      <input type="text" id="from" name="from"/>
      <label for="to">to</label>
      <input type="text" id="to" name="to"/>
  </div>

  <div class="span3">
    
    <h2><a href="#">Filter By Price</a></h2>
    <div id='price-range'>
    </div>
    <p>
      <label for="filtered-rev">Filter by Revenue:</label>
      <input type="hidden" id="hidden-price" />
    </p>
  </div>

  <div class="span3"><div id="filtered-price" ></div>
    <%= select("market", "market_id", 
        Market.all.collect {|p| [ p.city, p.city, 
          {:'data-lat' => p.latitude, :'data-lng' => p.longitude}] }, 
        {},{:class=>'chzn-select', :'data-placeholder' => "Find cities!", :multiple => true }) %>
  </div>
</div>

<div class="row-fluid" id="map_area">
  <div class="span4" id="left_list_area" >
    <h2>Sort by</h2>
    <a id="sort" class="btn">Price</a>
    <a id="sort_sold_out" class="btn">Sold out?</a>
    <ul id="sidebar_adventure_list">
    </ul>
  </div>

  <div class="span8">
      <%= gmaps(@gmap_options) %>
  </div>

  
</div>

<script type="text/javascript">
  var Adventure = {
    min_price: <%= Adventure.min_price %>,
    max_price: <%= Adventure.max_price %>
  }
</script>